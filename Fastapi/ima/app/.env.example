# ─────────────────────────────
# Application
# ─────────────────────────────
IMA_APP_NAME=IMA
IMA_DEBUG=true
IMA_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# ─────────────────────────────
# Database (Postgres, async driver required!)
# ─────────────────────────────
IMA_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ima

# ─────────────────────────────
# Security / Auth
# ─────────────────────────────
IMA_SECRET_KEY=changeme_super_secret_key   # used for JWT signing later
IMA_ACCESS_TOKEN_EXPIRE_MINUTES=15
IMA_REFRESH_TOKEN_EXPIRE_DAYS=7

# ─────────────────────────────
# Email (optional, for invites/password reset)
# ─────────────────────────────
IMA_SMTP_HOST=smtp.example.com
IMA_SMTP_PORT=587
IMA_SMTP_USER=username
IMA_SMTP_PASSWORD=password
IMA_SMTP_FROM=noreply@example.com
